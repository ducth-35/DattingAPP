<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:weightSum="5"
        android:id="@+id/thanhmenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/quaylai"
            android:layout_gravity="center"
            android:src="@drawable/quaylai"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_ganday"
            android:layout_gravity="center"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/gai1" />
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/name_message"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Mai Trang 1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                android:weightSum="3">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_10sdp"
                    android:id="@+id/image_status"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/online" />

                <TextView
                    android:layout_weight="3"
                    android:textColor="#226B0F"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="left"
                    android:text="Đang online" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/_50sdp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/menu" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_below="@id/thanhmenu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#72000000" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/recyc_chat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_600sdp"
        android:layout_above="@+id/text"
        android:layout_below="@id/thanhmenu"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/_10sdp"
        android:background="#ffff"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/camera" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/place" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_editex"
            android:gravity="center"
            android:weightSum="4">

            <EditText
                android:id="@+id/edit_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:background="#fafafa"
                android:hint="Nhập tin nhắn..."
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:onClick="publish"
                android:text="Gửi"
                android:textColor="#F4037B" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>