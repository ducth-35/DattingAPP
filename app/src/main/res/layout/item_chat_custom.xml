<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_mess"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:src="@drawable/gai1" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_width="0dp"
            android:layout_height="60dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/name_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Mai Trang 1"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_status"
                    android:layout_width="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/online"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Tối nay đi Cafe nhé !"
                android:textSize="14sp" />

        </LinearLayout>
        <LinearLayout
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="60dp">
            <TextView
                android:gravity="right"
                android:id="@+id/time"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="21/12/2020"
                android:layout_width="90dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/soluong"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/custom_editex"
                android:backgroundTint="#f9524c"
                android:gravity="center"
                android:text="2"
                android:textColor="#FDFDFD" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="80dp"
        android:background="#72000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>